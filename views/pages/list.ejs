<!DOCTYPE html>
<html>
    <head>
        <title>Lists</title>

        <link href="../../static/css/main.css" rel="stylesheet">
    </head>
    
    <body>
        <main>
            <header>
                <section class="header-tool">
                    <button><a href="/">Main</a></button>
                    <button><a href="/list">Lists</a></button>
                </section>

                <%- include('../partials/date-time'); %>

                <%- include('../partials/user-section'); %>
            </header>
            <hr>

            <section>
                <% if(lists.length == 0) { %>
                    <h3 style="text-align: center;">None exist for this search.</h3>
                <% } %>

                <% lists.forEach(list => { %>
                    <ul class="records">
                        <h3> <%= list.name %> <button onClick="location.href='/list/add/record/<%= list.id %>'" type="button">+</button></h3>
                        <li>
                            <p><b> Name    </b></p>
                            <p><b> Creator </b></p>
                            <p><b> Length  </b></p>
                        </li>
                        <% list.records.forEach(listrecord => { %>
                        <li>
                            <% records.forEach(record => { %>
                                <% if (record.id === listrecord.recid) { %>
                                    <p> <%= record.name %>   </p>
                                    <p> <%= record.artist %> </p>
                                    <p> <%= record.time %>   </p>
                                <% } %>
                            <% }); %>
                        </li>
                        <% }); %>
                    </ul>
                <% }); %>
            </section>
        </main>
    </body>
</html>